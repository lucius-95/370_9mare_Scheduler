<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.9mare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_900_light</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_light</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_900_dark</item>
        <!-- Toolbar color. -->
        <item name="toolbarStyle">@style/MyToolBar</item>

        <!-- Button outline color. -->
        <item name="android:strokeColor">?attr/colorSecondaryVariant</item>
    </style>

    <!-- Toolbar style -->
    <style name="MyToolBar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
</resources>